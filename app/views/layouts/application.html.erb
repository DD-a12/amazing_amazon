<!DOCTYPE html>
<html>
  <head>
    <title>AmazingAmazon</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
  <nav>
    <% if user_signed_in? %>
      Hello <%= link_to "#{current_user.full_name}", edit_user_path(current_user)%>
      <%= link_to "Sign out", session_path, method: :delete ,
      data: {comfirm: "Are you sure you want to logout?"} %>
      <%= link_to 'Favorite', liked_reviews_path %>
    <% else %>
      <%= link_to "Sign In", new_session_path %> |
      <%= link_to "Sign up", new_user_path %>
    <% end %><br>
    <%= link_to "Home", root_path %>
    <%= link_to "All Product", products_path %>
    <%= link_to "New Product", new_product_path %>
  </nav>
    <p>
    <% flash.each do |type, message| %>
      <div class="flash flash-<%= type %>">
        <%= message %>
      </div>
    <% end %>
    </p>
    <%= yield %>
  </body>
</html>
